# Hosting
CLOUDFLARE_ACCOUNT_ID= # Show URL: ID:xxx => https://dash.cloudflare.com/xxx
CLOUDFLARE_API_TOKEN= # Cloudflare (User) API Token
CLOUDFLARE_USER_API_TOKEN= # Cloudflare dashboard → My Profile → API Tokens: https://dash.cloudflare.com/xxx/api-tokens


CLOUDFLARE_KV_NAMESPACE= # npx wrangler kv namespace list
CLOUDFLARE_DATABASE_ID= # npx wrangler d1 list

# Database Configuration
# Development: Use postgres superuser or create a user with proper permissions
# Production: Use a dedicated user with limited permissions
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=demo_dev_123   # Also set it in wrangler config file (wrangler.jsonc)
DATABASE_URL=postgresql://user:password@localhost:5432/demo_dev_123

# Audit Configuration
AUDIT_BATCH_SIZE=100
AUDIT_FLUSH_INTERVAL=5000
AUDIT_RETENTION_DAYS=2555

# Neon DB
